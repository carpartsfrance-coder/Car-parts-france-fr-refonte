<%- include('./partials/head') %>

<%- include('./partials/sidebar', { active: 'returns' }) %>

<main class="flex-1">
  <div class="px-6 lg:px-10 py-8">
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
      <div>
        <div class="text-2xl md:text-3xl font-black text-slate-900">Consignes & retours</div>
        <div class="mt-1 text-sm text-slate-600">Gérez les demandes de retour, le suivi et le remboursement.</div>
      </div>
    </div>

    <form action="/admin/retours" class="mt-6 bg-white rounded-2xl border border-slate-200 p-4" method="GET">
      <div class="flex flex-col xl:flex-row xl:items-center gap-4">
        <div class="flex-1">
          <div class="relative">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">search</span>
            <input class="w-full rounded-2xl border border-slate-200 bg-white pl-10 pr-4 py-3 text-sm font-semibold text-slate-900 placeholder:text-slate-400" name="q" placeholder="Rechercher: n° retour, n° commande, email..." type="text" value="<%= filters && filters.q ? filters.q : '' %>" />
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <select class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-bold text-slate-900" name="status">
            <option value="">Tous les statuts</option>
            <option value="en_attente" <%= filters && filters.status === 'en_attente' ? 'selected' : '' %>>En attente</option>
            <option value="accepte" <%= filters && filters.status === 'accepte' ? 'selected' : '' %>>Accepté</option>
            <option value="refuse" <%= filters && filters.status === 'refuse' ? 'selected' : '' %>>Refusé</option>
            <option value="en_transit" <%= filters && filters.status === 'en_transit' ? 'selected' : '' %>>En transit</option>
            <option value="recu" <%= filters && filters.status === 'recu' ? 'selected' : '' %>>Reçu</option>
            <option value="rembourse" <%= filters && filters.status === 'rembourse' ? 'selected' : '' %>>Remboursé</option>
            <option value="cloture" <%= filters && filters.status === 'cloture' ? 'selected' : '' %>>Clôturé</option>
          </select>

          <select class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-bold text-slate-900" name="type">
            <option value="">Tous les clients</option>
            <option value="particulier" <%= filters && filters.type === 'particulier' ? 'selected' : '' %>>Particulier</option>
            <option value="pro" <%= filters && filters.type === 'pro' ? 'selected' : '' %>>Professionnel</option>
          </select>

          <select class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-bold text-slate-900" name="period">
            <option value="">Toutes périodes</option>
            <option value="7d" <%= filters && filters.period === '7d' ? 'selected' : '' %>>7 jours</option>
            <option value="30d" <%= filters && filters.period === '30d' ? 'selected' : '' %>>30 jours</option>
            <option value="90d" <%= filters && filters.period === '90d' ? 'selected' : '' %>>90 jours</option>
            <option value="365d" <%= filters && filters.period === '365d' ? 'selected' : '' %>>12 mois</option>
          </select>

          <button class="inline-flex items-center justify-center rounded-xl bg-primary px-5 py-3 text-xs font-black uppercase tracking-wider text-white hover:bg-red-700 transition" type="submit">
            Filtrer
          </button>
        </div>
      </div>
    </form>

    <div class="mt-8 bg-white rounded-2xl border border-slate-200 overflow-hidden">
      <div class="px-6 py-4 bg-slate-50 flex items-center justify-between">
        <div class="font-black text-slate-900">Derniers retours</div>
      </div>

      <% if (returns && returns.length) { %>
        <div class="overflow-x-auto">
          <table class="w-full text-left">
            <thead>
              <tr class="text-xs font-black text-slate-400 uppercase tracking-widest bg-white">
                <th class="px-6 py-4">Retour</th>
                <th class="px-6 py-4">Commande</th>
                <th class="px-6 py-4">Date</th>
                <th class="px-6 py-4">Client</th>
                <th class="px-6 py-4">Type</th>
                <th class="px-6 py-4">Statut</th>
                <th class="px-6 py-4 text-right">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <% returns.forEach((r) => { %>
                <tr>
                  <td class="px-6 py-4 font-black text-slate-900"><%= r.number %></td>
                  <td class="px-6 py-4 text-sm text-slate-600"><%= r.orderNumber || '—' %></td>
                  <td class="px-6 py-4 text-sm text-slate-600"><%= r.date %></td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-semibold text-slate-700"><%= r.customer %></div>
                    <% if (r.customerEmail) { %>
                      <div class="mt-1 text-xs text-slate-400"><%= r.customerEmail %></div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center rounded-full px-3 py-1 text-[10px] font-black uppercase tracking-widest <%= r.accountType === 'pro' ? 'bg-slate-900 text-white' : 'bg-slate-100 text-slate-700' %>">
                      <%= r.accountType === 'pro' ? 'PRO' : 'PARTICULIER' %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center rounded-full px-4 py-2 text-[10px] font-black uppercase tracking-widest <%= r.statusBadge.className %>">
                      <span class="material-symbols-outlined mr-2 text-[16px]">circle</span>
                      <%= r.statusBadge.label %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <% if (r.id) { %>
                      <a class="inline-flex items-center justify-center rounded-xl bg-slate-100 px-4 py-2 text-xs font-black uppercase tracking-wider text-slate-700 hover:bg-slate-200 transition" href="/admin/retours/<%= r.id %>">
                        <span class="material-symbols-outlined mr-2 text-base">visibility</span>
                        Détails
                      </a>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="p-6 text-slate-600">Aucun retour.</div>
      <% } %>
    </div>

    <% if (!dbConnected) { %>
      <div class="mt-8 rounded-xl border border-amber-200 bg-amber-50 p-4 text-amber-900">
        <div class="font-bold">Mode démo</div>
        <div class="mt-1 text-sm">La base de données est indisponible : la liste des retours n’est pas disponible.</div>
      </div>
    <% } %>
  </div>
</main>

<%- include('./partials/footer') %>
