<%- include('./partials/head') %>

<%- include('./partials/sidebar', { active: 'legal-pages' }) %>

<main class="flex-1">
  <div class="px-6 lg:px-10 py-8">
    <div class="flex items-start justify-between gap-6">
      <div>
        <div class="text-2xl md:text-3xl font-black text-slate-900"><%= page && page.title ? page.title : 'Page légale' %></div>
        <div class="mt-1 text-sm text-slate-600">Slug : <%= page && page.slug ? page.slug : '' %></div>
      </div>

      <div class="flex items-center gap-2">
        <a class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-black uppercase tracking-wider text-slate-700 hover:bg-slate-50 transition" href="/admin/pages-legales">
          Retour
        </a>
        <% if (page && page.slug) { %>
          <a class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-black uppercase tracking-wider text-slate-700 hover:bg-slate-50 transition" href="/legal/<%= page.slug %>" target="_blank" rel="noreferrer">
            Voir côté site
          </a>
        <% } %>
      </div>
    </div>

    <% if (errorMessage) { %>
      <div class="mt-6 rounded-xl border border-red-200 bg-red-50 p-4 text-red-900">
        <div class="font-bold">Erreur</div>
        <div class="mt-1 text-sm"><%= errorMessage %></div>
      </div>
    <% } %>

    <% if (successMessage) { %>
      <div class="mt-6 rounded-xl border border-green-200 bg-green-50 p-4 text-green-900">
        <div class="font-bold">OK</div>
        <div class="mt-1 text-sm"><%= successMessage %></div>
      </div>
    <% } %>

    <% if (!dbConnected) { %>
      <div class="mt-6 rounded-xl border border-amber-200 bg-amber-50 p-4 text-amber-900">
        <div class="font-bold">Mode démo</div>
        <div class="mt-1 text-sm">La base de données est indisponible : tu ne peux pas enregistrer tes modifications.</div>
      </div>
    <% } %>

    <div class="mt-8 bg-white rounded-2xl border border-slate-200 p-6">
      <form action="/admin/pages-legales/<%= page.slug %>" class="space-y-4" method="POST">
        <div>
          <label class="block text-sm font-bold text-slate-700" for="title">Titre</label>
          <input class="mt-2 w-full rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold focus:ring-primary" id="title" name="title" required type="text" value="<%= form && form.title ? form.title : '' %>" />
        </div>

        <div>
          <label class="block text-sm font-bold text-slate-700" for="sortOrder">Ordre</label>
          <input class="mt-2 w-full rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold focus:ring-primary" id="sortOrder" name="sortOrder" type="number" value="<%= form && typeof form.sortOrder !== 'undefined' ? form.sortOrder : 0 %>" />
        </div>

        <div>
          <label class="block text-sm font-bold text-slate-700" for="content">Contenu</label>
          <textarea class="mt-2 w-full min-h-[320px] rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold focus:ring-primary" id="content" name="content"><%= form && typeof form.content !== 'undefined' ? form.content : '' %></textarea>
          <div class="mt-2 text-xs text-slate-500">Astuce : les retours à la ligne sont conservés. Les liens (https://...) deviennent cliquables automatiquement.</div>
        </div>

        <label class="inline-flex items-center gap-2">
          <input class="rounded border-slate-300 text-primary focus:ring-primary" name="isPublished" type="checkbox" <%= form && form.isPublished ? 'checked' : '' %> />
          <span class="text-sm font-bold text-slate-700">Publié</span>
        </label>

        <button class="inline-flex items-center justify-center rounded-xl bg-primary px-5 py-3 text-xs font-black uppercase tracking-wider text-white hover:bg-red-700 transition disabled:opacity-50" <%= dbConnected ? '' : 'disabled' %> type="submit">
          Enregistrer
        </button>
      </form>
    </div>
  </div>
</main>

<%- include('./partials/footer') %>
