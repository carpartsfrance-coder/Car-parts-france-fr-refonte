<%- include('./partials/head') %>

<div class="flex-1 flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-md">
    <div class="text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary text-white">
        <span class="material-symbols-outlined text-3xl">lock_reset</span>
      </div>
      <div class="mt-4 text-2xl font-black text-slate-900">Réinitialiser le mot de passe admin</div>
      <div class="mt-1 text-sm text-slate-600">Tu auras besoin du code secret (ADMIN_RESET_TOKEN).</div>
    </div>

    <% if (!enabled) { %>
      <div class="mt-6 rounded-xl border border-amber-200 bg-amber-50 p-4 text-amber-900">
        <div class="font-bold">Fonction désactivée</div>
        <div class="mt-1 text-sm">Ajoute la variable <span class="font-bold">ADMIN_RESET_TOKEN</span> sur ton hébergeur, puis reviens ici.</div>
      </div>

      <div class="mt-6 text-center">
        <a class="font-bold text-primary hover:underline" href="/admin/connexion">Retour connexion</a>
      </div>
    <% } else { %>
      <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="mt-6 rounded-xl border border-emerald-200 bg-emerald-50 p-4 text-emerald-900">
          <div class="font-bold">OK</div>
          <div class="mt-1 text-sm"><%= successMessage %></div>
        </div>
      <% } %>

      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="mt-6 rounded-xl border border-red-200 bg-red-50 p-4 text-red-900">
          <div class="font-bold">Erreur</div>
          <div class="mt-1 text-sm"><%= errorMessage %></div>
        </div>
      <% } %>

      <form action="/admin/reinitialiser" class="mt-6 rounded-2xl border border-slate-200 bg-white p-6" method="POST">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-bold text-slate-700" for="token">Code secret</label>
            <input class="mt-2 w-full rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold focus:ring-primary" id="token" name="token" placeholder="Ton ADMIN_RESET_TOKEN" type="password" />
          </div>

          <div>
            <label class="block text-sm font-bold text-slate-700" for="password">Nouveau mot de passe</label>
            <input class="mt-2 w-full rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold focus:ring-primary" id="password" name="password" placeholder="Minimum 8 caractères" type="password" />
          </div>

          <div>
            <label class="block text-sm font-bold text-slate-700" for="passwordConfirm">Confirmer le mot de passe</label>
            <input class="mt-2 w-full rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold focus:ring-primary" id="passwordConfirm" name="passwordConfirm" placeholder="Retape le mot de passe" type="password" />
          </div>
        </div>

        <button class="mt-6 w-full rounded-xl bg-primary text-white px-5 py-3 font-black hover:bg-red-700 transition" type="submit">
          Mettre à jour
        </button>

        <div class="mt-4 text-center text-sm">
          <a class="font-bold text-primary hover:underline" href="/admin/connexion">Retour connexion</a>
        </div>
      </form>
    <% } %>
  </div>
</div>

<%- include('./partials/footer') %>
