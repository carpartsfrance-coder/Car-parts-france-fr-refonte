<%- include('./partials/head') %>

<%- include('./partials/sidebar', { active: 'returns' }) %>

<main class="flex-1">
  <div class="px-6 lg:px-10 py-8">
    <div class="flex items-start justify-between gap-6">
      <div class="flex items-start gap-4">
        <a class="w-10 h-10 rounded-xl border border-slate-200 hover:bg-slate-50 transition flex items-center justify-center bg-white" href="/admin/retours">
          <span class="material-symbols-outlined text-slate-500">arrow_back</span>
        </a>
        <div>
          <div class="text-2xl md:text-3xl font-black text-slate-900"><%= returnRequest ? returnRequest.number : 'Retour' %></div>
          <div class="mt-1 text-sm text-slate-600"><%= returnRequest ? (returnRequest.createdAt || '') : '' %></div>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <% if (returnRequest && returnRequest.statusBadge) { %>
          <span class="inline-flex items-center rounded-full px-4 py-2 text-[10px] font-black uppercase tracking-widest <%= returnRequest.statusBadge.className %>">
            <span class="material-symbols-outlined mr-2 text-[16px]">circle</span>
            <%= returnRequest.statusBadge.label %>
          </span>
        <% } %>
      </div>
    </div>

    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
      <div class="mt-6 rounded-xl border border-red-200 bg-red-50 p-4 text-red-900">
        <div class="font-bold">Erreur</div>
        <div class="mt-1 text-sm"><%= errorMessage %></div>
      </div>
    <% } %>

    <% if (typeof successMessage !== 'undefined' && successMessage) { %>
      <div class="mt-6 rounded-xl border border-green-200 bg-green-50 p-4 text-green-900">
        <div class="font-bold">OK</div>
        <div class="mt-1 text-sm"><%= successMessage %></div>
      </div>
    <% } %>

    <% if (!returnRequest) { %>
      <div class="mt-8 bg-white rounded-2xl border border-slate-200 p-6">
        <div class="text-slate-600">Aucune donnée de retour à afficher.</div>
      </div>
    <% } else { %>
      <div class="mt-8 grid grid-cols-1 xl:grid-cols-12 gap-6">
        <section class="xl:col-span-8 space-y-6">
          <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden">
            <div class="px-6 py-4 bg-slate-50 flex items-center justify-between">
              <div class="font-black text-slate-900">Informations</div>
            </div>

            <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <div class="text-[10px] font-black uppercase tracking-widest text-slate-400">Client</div>
                <div class="mt-2 font-black text-slate-900"><%= returnRequest.customer %></div>
                <% if (returnRequest.customerEmail) { %>
                  <div class="mt-1 text-sm text-slate-600"><%= returnRequest.customerEmail %></div>
                <% } %>
                <div class="mt-2">
                  <span class="inline-flex items-center rounded-full px-3 py-1 text-[10px] font-black uppercase tracking-widest <%= returnRequest.accountType === 'pro' ? 'bg-slate-900 text-white' : 'bg-slate-100 text-slate-700' %>">
                    <%= returnRequest.accountType === 'pro' ? 'PRO' : 'PARTICULIER' %>
                  </span>
                </div>
              </div>

              <div>
                <div class="text-[10px] font-black uppercase tracking-widest text-slate-400">Commande</div>
                <div class="mt-2 font-black text-slate-900"><%= returnRequest.orderNumber || '—' %></div>
                <% if (returnRequest.orderId) { %>
                  <div class="mt-3">
                    <a class="inline-flex items-center justify-center rounded-xl bg-slate-100 px-4 py-2 text-xs font-black uppercase tracking-wider text-slate-700 hover:bg-slate-200 transition" href="/admin/commandes/<%= returnRequest.orderId %>">
                      <span class="material-symbols-outlined mr-2 text-base">visibility</span>
                      Voir la commande
                    </a>
                  </div>
                <% } %>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden">
            <div class="px-6 py-4 bg-slate-50 flex items-center justify-between">
              <div class="font-black text-slate-900">Demande</div>
            </div>

            <div class="p-6 space-y-4">
              <div>
                <div class="text-[10px] font-black uppercase tracking-widest text-slate-400">Motif</div>
                <div class="mt-2 text-sm text-slate-700"><%= returnRequest.reason || '—' %></div>
              </div>
              <div>
                <div class="text-[10px] font-black uppercase tracking-widest text-slate-400">Message client</div>
                <div class="mt-2 text-sm text-slate-700 whitespace-pre-line"><%= returnRequest.message || '—' %></div>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden">
            <div class="px-6 py-4 bg-slate-50 flex items-center justify-between">
              <div class="font-black text-slate-900">Historique des statuts</div>
            </div>

            <% if (returnRequest.statusHistory && returnRequest.statusHistory.length) { %>
              <div class="p-6 space-y-4">
                <% returnRequest.statusHistory.forEach((h) => { %>
                  <div class="flex items-start gap-4">
                    <div class="mt-1 w-2.5 h-2.5 rounded-full bg-slate-300"></div>
                    <div class="flex-1">
                      <div class="flex flex-wrap items-center gap-3">
                        <span class="inline-flex items-center rounded-full px-4 py-2 text-[10px] font-black uppercase tracking-widest <%= h.statusBadge.className %>">
                          <span class="material-symbols-outlined mr-2 text-[16px]">circle</span>
                          <%= h.statusBadge.label %>
                        </span>
                        <div class="text-sm font-semibold text-slate-700"><%= h.changedAt %></div>
                      </div>
                      <div class="mt-1 text-xs text-slate-500">Par <span class="font-black text-slate-700"><%= h.changedBy %></span></div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="p-6 text-slate-600">Aucun historique.</div>
            <% } %>
          </div>
        </section>

        <aside class="xl:col-span-4 space-y-6">
          <div class="bg-white rounded-2xl border border-slate-200 p-6">
            <div class="text-[10px] font-black uppercase tracking-widest text-slate-400">Statut</div>
            <form action="/admin/retours/<%= returnRequest.id %>/statut" class="mt-4 flex flex-col gap-3" method="POST">
              <select class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-bold text-slate-900" name="status">
                <% (statusOptions || []).forEach((s) => { %>
                  <option value="<%= s.key %>" <%= s.key === returnRequest.statusKey ? 'selected' : '' %>><%= s.label %></option>
                <% }) %>
              </select>
              <button class="rounded-xl bg-primary text-white px-5 py-3 text-xs font-black uppercase tracking-wider hover:bg-red-700 transition" type="submit">
                Mettre à jour
              </button>
            </form>
          </div>

          <div class="bg-white rounded-2xl border border-slate-200 p-6">
            <div class="text-[10px] font-black uppercase tracking-widest text-slate-400">Note interne</div>
            <form action="/admin/retours/<%= returnRequest.id %>/note" class="mt-4" method="POST">
              <textarea class="w-full min-h-[130px] rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold focus:ring-primary" name="adminNote" placeholder="Note interne (visible seulement en admin)"><%= returnRequest.adminNote || '' %></textarea>
              <button class="mt-3 w-full rounded-xl bg-slate-900 text-white px-5 py-3 text-xs font-black uppercase tracking-wider hover:bg-slate-800 transition" type="submit">
                Enregistrer la note
              </button>
            </form>
          </div>

          <% if (!dbConnected) { %>
            <div class="rounded-xl border border-amber-200 bg-amber-50 p-4 text-amber-900">
              <div class="font-bold">Mode démo</div>
              <div class="mt-1 text-sm">La base de données est indisponible : impossible de modifier le retour.</div>
            </div>
          <% } %>
        </aside>
      </div>
    <% } %>
  </div>
</main>

<%- include('./partials/footer') %>
