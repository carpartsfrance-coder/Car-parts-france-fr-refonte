<%- include('./partials/head') %>

<%- include('./partials/sidebar', { active: 'blog' }) %>

<main class="flex-1">
  <div class="px-6 lg:px-10 py-8">
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
      <div>
        <div class="text-2xl md:text-3xl font-black text-slate-900">Blog</div>
        <div class="mt-1 text-sm text-slate-600">Articles, publication et SEO.</div>
      </div>

      <a class="inline-flex items-center justify-center rounded-xl bg-primary px-5 py-3 text-xs font-black uppercase tracking-wider text-white hover:bg-red-700 transition" href="/admin/blog/nouveau">
        <span class="material-symbols-outlined mr-2 text-base">add</span>
        Nouvel article
      </a>
    </div>

    <% if (errorMessage) { %>
      <div class="mt-6 rounded-2xl bg-red-50 border border-red-200 px-5 py-4 text-sm text-red-800 font-semibold"><%= errorMessage %></div>
    <% } %>

    <% if (successMessage) { %>
      <div class="mt-6 rounded-2xl bg-green-50 border border-green-200 px-5 py-4 text-sm text-green-800 font-semibold"><%= successMessage %></div>
    <% } %>

    <form action="/admin/blog" class="mt-6 bg-white rounded-2xl border border-slate-200 p-4" method="GET">
      <div class="flex flex-col xl:flex-row xl:items-center gap-4">
        <div class="flex-1">
          <div class="relative">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">search</span>
            <input class="w-full rounded-2xl border border-slate-200 bg-white pl-10 pr-4 py-3 text-sm font-semibold text-slate-900 placeholder:text-slate-400" name="q" placeholder="Rechercher: titre, slug..." type="text" value="<%= filters && filters.q ? filters.q : '' %>" />
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <select class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-bold text-slate-900" name="status">
            <option value="" <%= !filters || !filters.status ? 'selected' : '' %>>Tous</option>
            <option value="published" <%= filters && filters.status === 'published' ? 'selected' : '' %>>Publi√©</option>
            <option value="draft" <%= filters && filters.status === 'draft' ? 'selected' : '' %>>Brouillon</option>
          </select>

          <button class="inline-flex items-center justify-center rounded-xl bg-primary px-5 py-3 text-xs font-black uppercase tracking-wider text-white hover:bg-red-700 transition" type="submit">
            Filtrer
          </button>
        </div>
      </div>
    </form>

    <div class="mt-8 bg-white rounded-2xl border border-slate-200 overflow-hidden">
      <div class="px-6 py-4 bg-slate-50 flex items-center justify-between">
        <div class="font-black text-slate-900">Articles</div>
      </div>

      <% if (posts && posts.length) { %>
        <div class="overflow-x-auto">
          <table class="w-full text-left">
            <thead>
              <tr class="text-xs font-black text-slate-400 uppercase tracking-widest bg-white">
                <th class="px-6 py-4">Titre</th>
                <th class="px-6 py-4">Cat√©gorie</th>
                <th class="px-6 py-4">Statut</th>
                <th class="px-6 py-4">Slug</th>
                <th class="px-6 py-4 text-right">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% posts.forEach((p) => { %>
                <tr class="border-t border-slate-100">
                  <td class="px-6 py-4">
                    <div class="font-bold text-slate-900"><%= p.title %></div>
                    <div class="mt-1 text-xs text-slate-500">
                      <%= p.isFeatured ? '‚òÖ √Ä la une ‚Ä¢ ' : '' %>
                      <%= p.isHomeFeatured ? 'üè† Home ‚Ä¢ ' : '' %>
                      <%= p.publishedAt ? ('Publi√© le ' + p.publishedAt) : (p.isPublished ? 'Publi√©' : 'Brouillon') %>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-700"><%= p.categoryLabel || '‚Äî' %></td>
                  <td class="px-6 py-4">
                    <% if (p.isPublished) { %>
                      <span class="inline-flex items-center rounded-full bg-green-50 text-green-700 px-3 py-1 text-[10px] font-black uppercase tracking-widest">Publi√©</span>
                    <% } else { %>
                      <span class="inline-flex items-center rounded-full bg-slate-100 text-slate-700 px-3 py-1 text-[10px] font-black uppercase tracking-widest">Brouillon</span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 text-xs text-slate-500 font-mono"><%= p.slug %></td>
                  <td class="px-6 py-4 text-right">
                    <div class="inline-flex items-center gap-2">
                      <a class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-black uppercase tracking-wider text-slate-700 hover:bg-slate-50 transition" href="/admin/blog/<%= p.id %>">
                        Modifier
                      </a>
                      <% if (p.isPublished) { %>
                        <a class="inline-flex items-center justify-center rounded-xl bg-slate-900 px-4 py-2 text-xs font-black uppercase tracking-wider text-white hover:bg-slate-800 transition" href="<%= p.publicUrl %>" target="_blank" rel="noopener">
                          Voir
                        </a>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="px-6 py-10 text-center">
          <div class="text-sm font-black text-slate-900">Aucun article</div>
          <div class="mt-2 text-xs text-slate-500">Cr√©e ton premier article pour commencer √† faire du SEO.</div>
        </div>
      <% } %>
    </div>
  </div>
</main>
