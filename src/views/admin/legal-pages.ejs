<%- include('./partials/head') %>

<%- include('./partials/sidebar', { active: 'legal-pages' }) %>

<main class="flex-1">
  <div class="px-6 lg:px-10 py-8">
    <div class="flex items-start justify-between gap-6">
      <div>
        <div class="text-2xl md:text-3xl font-black text-slate-900">Pages légales</div>
        <div class="mt-1 text-sm text-slate-600">Modifie CGV, CGU, mentions légales, confidentialité…</div>
      </div>

      <a class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-black uppercase tracking-wider text-slate-700 hover:bg-slate-50 transition" href="/legal" target="_blank" rel="noreferrer">
        Voir côté site
      </a>
    </div>

    <% if (errorMessage) { %>
      <div class="mt-6 rounded-xl border border-red-200 bg-red-50 p-4 text-red-900">
        <div class="font-bold">Erreur</div>
        <div class="mt-1 text-sm"><%= errorMessage %></div>
      </div>
    <% } %>

    <% if (successMessage) { %>
      <div class="mt-6 rounded-xl border border-green-200 bg-green-50 p-4 text-green-900">
        <div class="font-bold">OK</div>
        <div class="mt-1 text-sm"><%= successMessage %></div>
      </div>
    <% } %>

    <% if (!dbConnected) { %>
      <div class="mt-6 rounded-xl border border-amber-200 bg-amber-50 p-4 text-amber-900">
        <div class="font-bold">Mode démo</div>
        <div class="mt-1 text-sm">La base de données est indisponible : tu ne peux pas enregistrer tes modifications.</div>
      </div>
    <% } %>

    <div class="mt-8 bg-white rounded-2xl border border-slate-200 overflow-hidden">
      <div class="px-6 py-4 bg-slate-50">
        <div class="font-black text-slate-900">Liste</div>
        <div class="mt-1 text-xs text-slate-500"><%= pages && pages.length ? pages.length : 0 %> page(s)</div>
      </div>

      <% if (pages && pages.length) { %>
        <div class="divide-y divide-slate-100">
          <% pages.forEach((p) => { %>
            <div class="p-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <div>
                <div class="font-black text-slate-900"><%= p.title %></div>
                <div class="mt-1 text-xs text-slate-500">Slug : <%= p.slug %></div>
              </div>

              <div class="flex items-center gap-2">
                <a class="inline-flex items-center justify-center rounded-xl bg-slate-900 text-white px-4 py-2 text-xs font-black uppercase tracking-wider hover:bg-black transition" href="/admin/pages-legales/<%= p.slug %>">
                  Éditer
                </a>
                <a class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-black uppercase tracking-wider text-slate-700 hover:bg-slate-50 transition" href="/legal/<%= p.slug %>" target="_blank" rel="noreferrer">
                  Voir
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="p-6 text-slate-600">Aucune page.</div>
      <% } %>
    </div>
  </div>
</main>

<%- include('./partials/footer') %>
