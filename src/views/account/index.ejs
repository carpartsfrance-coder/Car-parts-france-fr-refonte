<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="flex-1">
  <div class="mx-auto max-w-[1440px] px-4 md:px-10 py-8">
    <div class="bg-white rounded-2xl border border-slate-200 p-5 flex flex-col md:flex-row md:items-end md:justify-between gap-4">
      <div>
        <div class="flex flex-wrap items-center gap-2">
          <h2 class="text-3xl font-bold text-slate-900">Mon compte</h2>
          <span class="inline-flex items-center rounded-full px-3 py-1 text-[10px] font-black uppercase tracking-widest <%= accountType === 'pro' ? 'bg-primary/10 text-primary' : 'bg-slate-100 text-slate-700' %>">
            <%= accountType === 'pro' ? 'Professionnel' : 'Particulier' %>
          </span>
        </div>
        <p class="mt-2 text-slate-600">Gère tes informations, tes commandes et tes préférences.</p>
      </div>
    </div>

    <% if (!dbConnected) { %>
      <div class="mt-8 rounded-xl border border-amber-200 bg-amber-50 p-5 text-amber-900">
        <div class="font-bold">Mode démo activé</div>
        <div class="mt-1 text-sm">Le site fonctionne sans base de données, avec des données d'exemple.</div>
      </div>
    <% } %>

    <div class="mt-10 grid grid-cols-1 lg:grid-cols-12 gap-8">
      <aside class="lg:col-span-3">
        <%- include('./_sidebar', { active: 'dashboard' }) %>
      </aside>

      <section class="lg:col-span-9 space-y-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white p-6 rounded-2xl border border-slate-200">
            <div class="flex items-center justify-between mb-2">
              <span class="text-slate-500 text-sm font-semibold">Commandes en cours</span>
              <div class="p-2 bg-blue-50 rounded-lg text-blue-600">
                <span class="material-symbols-outlined">local_shipping</span>
              </div>
            </div>
            <div class="text-3xl font-black text-slate-900"><%= typeof orderCount !== 'undefined' ? orderCount : 0 %></div>
          </div>

          <div class="bg-white p-6 rounded-2xl border border-slate-200">
            <div class="flex items-center justify-between mb-2">
              <span class="text-slate-500 text-sm font-semibold">Véhicules enregistrés</span>
              <div class="p-2 bg-green-50 rounded-lg text-green-600">
                <span class="material-symbols-outlined">garage</span>
              </div>
            </div>
            <div class="text-3xl font-black text-slate-900"><%= typeof vehicleCount !== 'undefined' ? vehicleCount : 0 %></div>
          </div>

          <div class="bg-white p-6 rounded-2xl border border-slate-200">
            <div class="flex items-center justify-between mb-2">
              <span class="text-slate-500 text-sm font-semibold">Adresses enregistrées</span>
              <div class="p-2 bg-primary/10 rounded-lg text-primary">
                <span class="material-symbols-outlined">location_on</span>
              </div>
            </div>
            <div class="text-3xl font-black text-slate-900"><%= typeof addressCount !== 'undefined' ? addressCount : 0 %></div>
            <div class="mt-3 text-xs text-slate-500">
              <% if (typeof defaultAddress !== 'undefined' && defaultAddress) { %>
                Par défaut :
                <span class="font-bold text-slate-700"><%= defaultAddress.line1 %>, <%= defaultAddress.postalCode %> <%= defaultAddress.city %></span>
              <% } else { %>
                Aucune adresse par défaut
              <% } %>
              • <a class="text-primary font-bold hover:underline" href="/compte/adresses">Gérer</a>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden">
          <div class="p-6 border-b border-slate-100 flex justify-between items-center gap-4">
            <h3 class="text-xl font-bold text-slate-900">Dernières commandes</h3>
            <a class="text-primary text-sm font-bold hover:underline" href="/compte/commandes">Voir tout</a>
          </div>

          <% if (orders && orders.length) { %>
            <div class="overflow-x-auto">
              <table class="w-full text-left">
                <thead>
                  <tr class="text-xs font-black text-slate-400 uppercase tracking-widest bg-slate-50">
                    <th class="px-6 py-4">Commande</th>
                    <th class="px-6 py-4">Date</th>
                    <th class="px-6 py-4">Statut</th>
                    <th class="px-6 py-4">Total</th>
                    <th class="px-6 py-4 text-right">Actions</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                  <% orders.forEach((o) => { %>
                    <tr>
                      <td class="px-6 py-4">
                        <span class="font-black text-slate-900"><%= o.number || '—' %></span>
                      </td>
                      <td class="px-6 py-4 text-sm text-slate-500"><%= o.date || '—' %></td>
                      <td class="px-6 py-4">
                        <span class="text-sm font-bold text-slate-700"><%= o.status || '—' %></span>
                      </td>
                      <td class="px-6 py-4 font-black"><%= o.total || '—' %></td>
                      <td class="px-6 py-4 text-right">
                        <% if (o.id) { %>
                          <a class="inline-flex p-2 hover:bg-slate-100 rounded-lg transition" href="/compte/commandes/<%= o.id %>">
                            <span class="material-symbols-outlined text-slate-400">visibility</span>
                          </a>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="p-6">
              <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
                <div class="font-black text-slate-900">Aucune commande</div>
                <div class="mt-1 text-sm text-slate-600">Quand tu passeras une commande, elle apparaîtra ici.</div>
                <a class="mt-4 inline-flex items-center gap-2 rounded-xl bg-slate-900 text-white px-4 py-2 text-xs font-black uppercase tracking-wider" href="/produits">
                  <span class="material-symbols-outlined text-base">search</span>
                  Parcourir le catalogue
                </a>
              </div>
            </div>
          <% } %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white rounded-2xl border border-slate-200 p-6">
            <h3 class="text-xl font-bold mb-6 flex items-center gap-2 text-slate-900">
              <span class="material-symbols-outlined text-primary">garage</span>
              Mon garage
            </h3>

            <% if (vehicles && vehicles.length) { %>
              <div class="space-y-4">
                <% vehicles.forEach((v) => { %>
                  <div class="p-4 rounded-2xl border border-slate-200 flex items-center gap-4 hover:border-primary/50 transition cursor-pointer group">
                    <div class="w-12 h-12 rounded-xl bg-slate-50 flex items-center justify-center">
                      <span class="material-symbols-outlined text-slate-400 group-hover:text-primary">minor_crash</span>
                    </div>
                    <div class="flex-1">
                      <div class="font-black text-sm text-slate-900"><%= v.name || 'Véhicule' %></div>
                      <div class="text-xs text-slate-500 uppercase"><%= v.details || '' %></div>
                    </div>
                    <span class="material-symbols-outlined text-slate-300">chevron_right</span>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6">
                <div class="font-black text-slate-900">Aucun véhicule</div>
                <div class="mt-1 text-sm text-slate-600">Ajoute ton premier véhicule pour personnaliser les compatibilités.</div>
                <a class="mt-4 inline-flex items-center gap-2 rounded-xl bg-slate-900 text-white px-4 py-2 text-xs font-black uppercase tracking-wider" href="/compte/garage">
                  <span class="material-symbols-outlined text-base">add</span>
                  Ouvrir le garage
                </a>
              </div>
            <% } %>
          </div>

          <div class="bg-slate-900 text-white rounded-2xl p-8 relative overflow-hidden border border-slate-800">
            <div class="absolute -right-10 -bottom-10 opacity-10">
              <span class="material-symbols-outlined text-[180px]">dashboard</span>
            </div>

            <div class="relative z-10">
              <h3 class="text-xl font-bold mb-2">Actions rapides</h3>
              <p class="text-slate-300 text-sm mb-6">Accède aux pages importantes de ton compte.</p>

              <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                <a class="rounded-xl bg-white/10 hover:bg-white/15 transition border border-white/10 px-4 py-4" href="/compte/garage">
                  <div class="flex items-center gap-2 font-black">
                    <span class="material-symbols-outlined">garage</span>
                    Garage
                  </div>
                  <div class="mt-1 text-xs text-slate-300">Gérer tes véhicules</div>
                </a>

                <a class="rounded-xl bg-white/10 hover:bg-white/15 transition border border-white/10 px-4 py-4" href="/compte/adresses">
                  <div class="flex items-center gap-2 font-black">
                    <span class="material-symbols-outlined">location_on</span>
                    Adresses
                  </div>
                  <div class="mt-1 text-xs text-slate-300">Livraison & facturation</div>
                </a>

                <a class="rounded-xl bg-white/10 hover:bg-white/15 transition border border-white/10 px-4 py-4" href="/compte/securite">
                  <div class="flex items-center gap-2 font-black">
                    <span class="material-symbols-outlined">lock</span>
                    Sécurité
                  </div>
                  <div class="mt-1 text-xs text-slate-300">Mot de passe</div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
