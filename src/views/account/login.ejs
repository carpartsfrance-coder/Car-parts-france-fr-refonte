<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="flex-1 bg-background-light dark:bg-background-dark text-gray-800 dark:text-gray-200 transition-colors duration-300">
  <div class="mx-auto max-w-[1440px] px-4 md:px-10 py-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 overflow-hidden rounded-3xl border border-border-light dark:border-border-dark bg-white dark:bg-background-dark">
      <div class="hidden lg:flex relative overflow-hidden bg-background-dark">
        <div class="absolute inset-0 z-0">
          <div class="w-full h-full bg-cover bg-center opacity-60 mix-blend-overlay" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuBmlJ1c46DQGahT-xETYMMG2D3NtuTNOp6ILzSt5RbDsx4xT4Rll7WM6CdeK-Ab9cplW_h1_DHyAs8JSn8LweYXjdFs_jUEMSAUCapMtyc_oDuO-am-PzKeGdEyw47Kv7Es8mJZrDfPK7JOfN8ADVU0ctYjaaiPjN8IFP6jFx2x4LX-boDGmPcmf9Q92TiFFH9exU_UWdRs4V21sMSWhnB1GnpjS0450PwP3RQC9Dimlo9PIxal6zG3vEF7JzPuHplOmeyGaEZx2Q')"></div>
          <div class="absolute inset-0 bg-gradient-to-t from-background-dark via-transparent to-transparent"></div>
        </div>

        <div class="relative z-10 flex flex-col justify-between p-16 w-full">
          <div class="flex items-center gap-3">
            <div class="bg-primary p-2 rounded-xl">
              <span class="material-symbols-outlined text-white text-3xl">verified</span>
            </div>
            <span class="text-2xl font-extrabold tracking-tight text-white">Car Parts France</span>
          </div>

          <div class="max-w-md">
            <h1 class="text-5xl font-black text-white leading-[1.1] mb-6">La performance à votre portée.</h1>
            <p class="text-xl text-gray-300">Accédez à plus de 500 000 pièces certifiées pour votre véhicule. Livraison express en 24/48h.</p>
          </div>

          <div class="flex gap-8 text-white/70 text-sm">
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-primary">verified_user</span>
              Paiement 100% Sécurisé
            </div>
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-primary">support_agent</span>
              Support Expert
            </div>
          </div>
        </div>
      </div>

      <div class="w-full flex flex-col px-6 py-12 md:px-16 lg:px-20 justify-center">
        <div class="max-w-md w-full mx-auto">
          <div class="mb-10">
            <h2 class="text-3xl font-black text-gray-900 dark:text-white mb-2">Bon retour parmi nous</h2>
            <p class="text-gray-500 dark:text-gray-400">Veuillez entrer vos identifiants pour accéder à votre espace.</p>
          </div>

          <% if (errorMessage) { %>
            <div class="mb-6 rounded-2xl border border-red-200 bg-red-50 p-5 text-red-900">
              <div class="font-bold">Erreur</div>
              <div class="mt-1 text-sm"><%= errorMessage %></div>
            </div>
          <% } %>

          <% if (typeof successMessage !== 'undefined' && successMessage) { %>
            <div class="mb-6 rounded-2xl border border-green-200 bg-green-50 p-5 text-green-900">
              <div class="font-bold">OK</div>
              <div class="mt-1 text-sm"><%= successMessage %></div>
            </div>
          <% } %>

          <form action="/compte/connexion" class="space-y-5" method="POST">
            <input name="returnTo" type="hidden" value="<%= typeof returnTo !== 'undefined' ? returnTo : '/compte' %>" />

            <div>
              <label class="block text-sm font-semibold text-gray-900 dark:text-gray-200 mb-2" for="email">Email</label>
              <input class="w-full h-14 px-5 rounded-full border border-gray-200 dark:border-white/10 bg-white dark:bg-white/5 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all placeholder:text-gray-400" id="email" name="email" placeholder="votre@email.fr" required type="email" value="<%= typeof email !== 'undefined' ? email : '' %>" />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-900 dark:text-gray-200 mb-2" for="password">Mot de passe</label>
              <div class="relative">
                <input class="w-full h-14 px-5 pr-12 rounded-full border border-gray-200 dark:border-white/10 bg-white dark:bg-white/5 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all placeholder:text-gray-400" id="password" name="password" placeholder="••••••••" required type="password" />
                <button aria-label="Afficher/masquer le mot de passe" class="absolute right-5 top-1/2 -translate-y-1/2 text-gray-400 hover:text-primary" data-toggle-password type="button">
                  <span class="material-symbols-outlined" data-toggle-password-icon>visibility</span>
                </button>
              </div>
              <div class="mt-2 text-[12px] text-gray-500 dark:text-gray-400">Minimum 6 caractères.</div>
              <div class="mt-3">
                <a class="text-sm font-bold text-primary hover:underline" href="/compte/mot-de-passe-oublie">Mot de passe oublié ?</a>
              </div>
            </div>

            <div class="flex items-center gap-2 py-2">
              <input class="w-5 h-5 rounded-md border-gray-300 text-primary focus:ring-primary" id="remember" name="remember" type="checkbox" value="true" />
              <label class="text-sm font-medium text-gray-600 dark:text-gray-400" for="remember">Rester connecté</label>
            </div>

            <button class="w-full h-14 bg-primary hover:bg-primary/90 text-white font-bold rounded-full shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-2" type="submit">
              Se connecter
              <span class="material-symbols-outlined text-sm">arrow_forward</span>
            </button>

            <% if (!dbConnected) { %>
              <div class="mt-2 rounded-2xl border border-amber-200 bg-amber-50 p-5 text-amber-900">
                <div class="font-bold">Mode démo</div>
                <div class="mt-1 text-sm">La base de données est indisponible : la connexion ne peut pas fonctionner.</div>
              </div>
            <% } %>
          </form>

          <div class="mt-12 text-center">
            <p class="text-gray-500 dark:text-gray-400 mb-4">Nouveau ici ?</p>
            <a class="inline-block w-full py-4 rounded-full border-2 border-primary text-primary font-extrabold hover:bg-primary hover:text-white transition-all text-center" href="/compte/inscription?returnTo=<%= encodeURIComponent(typeof returnTo !== 'undefined' ? returnTo : '/compte') %>">
              Créer un compte
            </a>
          </div>

          <div class="mt-12 flex items-center justify-center gap-6 text-gray-400">
            <a class="flex flex-col items-center gap-1 group hover:text-primary transition-colors" href="/">
              <span class="material-symbols-outlined text-2xl">help</span>
              <span class="text-[10px] uppercase font-bold tracking-widest">Aide</span>
            </a>
            <a class="flex flex-col items-center gap-1 group hover:text-primary transition-colors" href="/contact">
              <span class="material-symbols-outlined text-2xl">mail</span>
              <span class="text-[10px] uppercase font-bold tracking-widest">Contact</span>
            </a>
            <a class="flex flex-col items-center gap-1 group hover:text-primary transition-colors" href="/">
              <span class="material-symbols-outlined text-2xl">lock</span>
              <span class="text-[10px] uppercase font-bold tracking-widest">Confidentialité</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  (function () {
    var btn = document.querySelector('[data-toggle-password]');
    var input = document.getElementById('password');
    var icon = document.querySelector('[data-toggle-password-icon]');

    if (!btn || !input) return;

    btn.addEventListener('click', function () {
      var isPassword = input.getAttribute('type') === 'password';
      input.setAttribute('type', isPassword ? 'text' : 'password');
      if (icon) icon.textContent = isPassword ? 'visibility_off' : 'visibility';
    });
  })();
</script>

<%- include('../partials/footer') %>
