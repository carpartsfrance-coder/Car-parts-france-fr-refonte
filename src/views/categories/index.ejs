<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="flex-1 bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <% if (!dbConnected) { %>
      <div class="rounded-2xl border border-amber-200 bg-amber-50 p-5 text-amber-900 mb-10">
        <div class="font-bold">Mode démo activé</div>
        <div class="mt-1 text-sm">Le site fonctionne sans base de données, avec des catégories dérivées des produits d'exemple.</div>
      </div>
    <% } %>

    <div class="flex items-end justify-between gap-6 flex-wrap">
      <div>
        <h1 class="text-3xl font-black tracking-tight">Catégories</h1>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">Choisis une catégorie pour voir toutes les pièces disponibles.</p>
      </div>
      <a class="text-sm font-black uppercase tracking-wider text-primary hover:underline" href="/produits">Voir tout le catalogue</a>
    </div>

    <% if (!categories || !categories.length) { %>
      <div class="mt-10 rounded-3xl bg-white dark:bg-surface-dark border border-slate-100 dark:border-slate-800 p-10 shadow-sm">
        <div class="font-bold text-lg">Aucune catégorie</div>
        <div class="mt-2 text-sm text-slate-500">Aucune catégorie n’est disponible pour le moment.</div>
      </div>
    <% } else { %>
      <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% categories.forEach((c) => { %>
          <a class="group rounded-3xl bg-white/70 dark:bg-surface-dark/60 backdrop-blur-xl border border-white/40 dark:border-slate-700/70 p-6 shadow-premium hover:shadow-premium-hover transition-all" href="<%= c.publicPath %>">
            <div class="flex items-center justify-between gap-4">
              <div class="min-w-0">
                <div class="text-[10px] font-black uppercase tracking-widest text-slate-400">Catégorie</div>
                <div class="mt-2 text-lg font-black text-slate-900 dark:text-white truncate group-hover:text-primary transition-colors"><%= c.name %></div>
              </div>
              <span class="material-symbols-outlined text-slate-300 group-hover:text-primary transition-colors">chevron_right</span>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </div>
</main>

<%- include('../partials/footer') %>
